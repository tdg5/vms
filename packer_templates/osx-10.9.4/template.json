{
  "variables": {
    "iso_checksum": "5dce485c9de3cb84c8dbd617f5cbe89b",
    "iso_url": "OSX_InstallESD_10.9.5_13F34.dmg",
    "password": "vagrant",
    "username": "vagrant"
  },
  "builders": [{
